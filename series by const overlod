#include<iostream>
using namespace std;
class series{
	public :
	series();
	~series();
	void read();
};
series::series()
{
	cout<<endl;
}
void series::read()
{

	{
		cout<<"enter the value";
	int n;
		cin>>n;
  int s=0;
	 int t=1,i=1;
	 for(i=1;i<=n;i++)
  {
  	cout<<" "<<t<<" ";
      if (i<n)
      {
      	cout<<"+";    
      }
     s=s+t;
     t=(t*10)+1;
  }
  cout<<endl<<"The sum is :"<<s;
}
}
	series::~series()
		{
			cout<<endl<<"detail is clear";
		}
int main()
{
	series u;
	u.read();

}
