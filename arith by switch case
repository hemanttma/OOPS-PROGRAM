#include<iostream>
using namespace std;
int main()
{
	int a,b,input;
	float div;
	cout<<"calculating\n\n1-add\n2-sub\n3-mult\n4-div\n5-mod\n";
	cout<<"enter the operator:";
	cin>>input;
	cout<<"enter your first number:";
	cin>>a;
	cout<<"enter your second number:";
	cin>>b;
	switch(input)
	{
		case 1:
			cout<<a<<"+"<<b<<"="<<(a+b);
			break;
		case 2:
			cout<<a<<"-"<<b<<(a-b);
			break;
		case 3:
			cout<<a<<"*"<<b<<(a*b);
			break;
		case 4:
			cout<<a<<"%"<<b<<(a%b);
			break;
		case 5:
			div=float(a)/float(b);
			cout<<a<<"/"<<b<<div;
			break;
			default:
		cout<<"operation is invalid";
}

}
